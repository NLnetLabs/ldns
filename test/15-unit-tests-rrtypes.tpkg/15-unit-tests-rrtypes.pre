#$hdr 15-unit-tests-rrtypes.configure.ac &&\
#eval ./configure --with-ldns=../../ "$opts" && \
../../config.status --file 15-unit-tests-rrtypes.Makefile
$mk -f 15-unit-tests-rrtypes.Makefile
